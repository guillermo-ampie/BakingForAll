<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.ampieguillermo.bakingforall">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:name=".BakingForAllApp"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:label="@string/app_name"
      android:name=".RecipeListActivity"
      android:theme="@style/AppTheme.NoActionBar"
      android:launchMode="singleTop">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:label="@string/recipe_detail_title"
      android:name=".RecipeDetailActivity"
      android:parentActivityName=".RecipeListActivity"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.ampieguillermo.bakingforall.RecipeListActivity"/>
    </activity>
  </application>

</manifest>