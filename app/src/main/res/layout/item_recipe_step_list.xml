<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
  <android.support.v7.widget.CardView
    android:id="@+id/cardview_step_list"
    style="?attr/cardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_all_horizontal"
    android:layout_gravity="center">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/list_item_selector"
      android:orientation="horizontal">
      <!--android:background="?attr/selectableItemBackgroundBorderless"-->

      <ImageView
        android:id="@+id/imageview_item_recipe_step_list_step_icon"
        android:layout_width="@dimen/size_item_ingredient_list_icon"
        android:layout_height="@dimen/size_item_ingredient_list_icon"
        android:layout_marginTop="@dimen/margin_medium_all_vertical"
        android:layout_marginBottom="@dimen/margin_medium_all_vertical"
        android:layout_marginStart="@dimen/margin_all_horizontal"
        android:layout_marginEnd="@dimen/margin_all_horizontal"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/description_recipe_step_icon"
        app:srcCompat="@drawable/ic_steps_24dp"/>

      <TextView
        android:id="@+id/textview_item_step_list_short_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_medium_all_vertical"
        android:layout_marginBottom="@dimen/margin_medium_all_vertical"
        android:layout_marginStart="@dimen/margin_all_horizontal"
        android:layout_marginEnd="@dimen/margin_all_horizontal"
        android:layout_gravity="center_vertical"
        android:textSize="16sp"
        tools:text="@sample/recipe_data.json/steps/shortDescription"/>
      <ImageView
        android:id="@+id/imageview_recipe_step_content_play_icon"
        android:layout_width="@dimen/size_item_ingredient_list_icon"
        android:layout_height="@dimen/size_item_ingredient_list_icon"
        android:layout_marginStart="@dimen/margin_all_horizontal"
        android:layout_marginEnd="@dimen/margin_all_horizontal"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/description_play_video_icon"
        app:srcCompat="@drawable/ic_play_circle_outline_black_24dp"/>
    </LinearLayout>
  </android.support.v7.widget.CardView>
</layout>
